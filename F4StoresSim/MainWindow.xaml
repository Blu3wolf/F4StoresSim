<Window x:Class="F4StoresSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F4StoresSim"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <DockPanel>
                <StackPanel Margin="10,10,10,0">
                    <TextBlock TextAlignment="Center">MMC</TextBlock>
                    <CheckBox Margin="10" />
                </StackPanel>
                <StackPanel Margin="10,10,10,0">
                    <TextBlock TextAlignment="Center">ST STA</TextBlock>
                    <CheckBox Margin="10" />
                </StackPanel>
                <StackPanel Margin="10,10,10,0">
                    <TextBlock TextAlignment="Center">MFDS</TextBlock>
                    <CheckBox Margin="10" />
                </StackPanel>
                <StackPanel Margin="10,10,10,0">
                    <TextBlock TextAlignment="Center">WOW</TextBlock>
                    <CheckBox Margin="10" />
                </StackPanel>
                <StackPanel DockPanel.Dock="Right" Margin="10,10,10,0">
                    <TextBlock TextAlignment="Center">EMER STORES JETT</TextBlock>
                    <Button Content="E-J" />
                </StackPanel>
            </DockPanel>
            <Label Content="Selected Mastermode: System Off" Margin="10,0,0,0" />
            <StackPanel Orientation="Horizontal" >
                <Button Content="A-A" Margin="10,0,0,0" />
                <Button Content="A-G" Margin="10,0,0,0" />
                <RadioButton Content="DGFT" Margin="10,0,0,0"  VerticalAlignment="Center" />
                <RadioButton Content="Cancel" Margin="10,0,0,0"  VerticalAlignment="Center" />
                <RadioButton Content="MRM" Margin="10,0,0,0"  VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="NWS/MSL STEP" Margin="10,0,0,0"  />
                <Button Content="WPN REL" Margin="10,0,0,0"  />
                <Button Content="Trigger" Margin="10,0,0,0"  />
                <RadioButton Content="SIMULATE" Margin="10,0,0,0" VerticalAlignment="Center" />
                <RadioButton Content="OFF" Margin="10,0,0,0"  VerticalAlignment="Center" />
                <RadioButton Content="MASTER ARM" Margin="10,0,0,0"  VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Margin="10,10,10,0">
                <Button Content="MFD w/ Bezel" Margin="0,0,0,0" Click="Button_Click"/>
                <Button Content="MFD w/out Bezel" Margin="0,10,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
